<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.tesira.civic.HomeFragment">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radio_0"
            style="@style/RadioButtonStyleLandscape"
            android:text="0"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/radio_1"
            style="@style/RadioButtonStyleLandscape"
            android:layout_marginStart="4dp"
            android:text="1"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/radio_2"
            style="@style/RadioButtonStyleLandscape"
            android:layout_marginStart="4dp"
            android:text="2"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/radio_3"
            style="@style/RadioButtonStyleLandscape"
            android:layout_marginStart="4dp"
            android:text="3"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/radio_4"
            style="@style/RadioButtonStyleLandscape"
            android:layout_marginStart="4dp"
            android:text="4"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/radio_5"
            style="@style/RadioButtonStyleLandscape"
            android:layout_marginStart="4dp"
            android:text="5"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/radio_6"
            style="@style/RadioButtonStyleLandscape"
            android:layout_marginStart="4dp"
            android:text="6"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/radio_7"
            style="@style/RadioButtonStyleLandscape"
            android:layout_marginStart="4dp"
            android:text="7"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/radio_8"
            style="@style/RadioButtonStyleLandscape"
            android:layout_marginStart="4dp"
            android:text="8"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/radio_9"
            style="@style/RadioButtonStyleLandscape"
            android:layout_marginStart="4dp"
            android:text="9"
            tools:ignore="HardcodedText" />
    </RadioGroup>

    <TextView
        android:id="@+id/tvAST"
        style="@style/AstMarkerTextView"
        tools:text="AST (B)"
        android:layout_width="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/radioGroup"
        app:layout_constraintTop_toTopOf="@id/radioGroup"
        app:layout_constraintBottom_toBottomOf="@id/radioGroup"
        tools:ignore="SelectableText" />


    <TextView
        android:id="@+id/tvEBA"
        style="@style/AstMarkerTextView"
        android:text="EBA"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/tvAST"
        app:layout_constraintTop_toTopOf="@id/tvAST"
        app:layout_constraintBottom_toBottomOf="@id/tvAST"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvMBA"
        style="@style/AstMarkerTextViewLandscape"
        android:text="MBA"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/tvEBA"
        app:layout_constraintTop_toTopOf="@id/tvEBA"
        app:layout_constraintBottom_toBottomOf="@id/tvEBA"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvLBA"
        style="@style/AstMarkerTextViewLandscape"
        android:text="LBA"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/tvMBA"
        app:layout_constraintTop_toTopOf="@id/tvMBA"
        app:layout_constraintBottom_toBottomOf="@id/tvMBA"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvEIA"
        style="@style/AstMarkerTextViewLandscape"
        android:text="EIA"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/tvLBA"
        app:layout_constraintTop_toTopOf="@id/tvLBA"
        app:layout_constraintBottom_toBottomOf="@id/tvLBA"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvLIA"
        style="@style/AstMarkerTextViewLandscape"
        android:text="LIA"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/tvEIA"
        app:layout_constraintTop_toTopOf="@id/tvEIA"
        app:layout_constraintBottom_toBottomOf="@id/tvEIA"
        tools:ignore="HardcodedText" />


    <LinearLayout
        android:id="@+id/secondRowContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvBoni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/colorbonus"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/bonusContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/bonusBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="35dp"
                android:padding="4dp"
                android:gravity="center"
                tools:text="B"
                android:textColor="#FFFFFF"
                android:background="#0000FF"
                tools:ignore="SelectableText" />

            <TextView
                android:id="@+id/bonusGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="35dp"
                android:padding="4dp"
                android:layout_marginStart="4dp"
                android:gravity="center"
                tools:text="G"
                android:textColor="#000000"
                android:background="#00FF00"
                tools:ignore="SelectableText" />

            <TextView
                android:id="@+id/bonusOrange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="35dp"
                android:padding="4dp"
                android:layout_marginStart="4dp"
                android:gravity="center"
                tools:text="0"
                android:textColor="#FFFFFF"
                android:background="#FFA500"
                tools:ignore="SelectableText" />

            <TextView
                android:id="@+id/bonusRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="35dp"
                android:padding="4dp"
                android:layout_marginStart="4dp"
                android:gravity="center"
                tools:text="R"
                android:textColor="#FFFFFF"
                android:background="#FF0000"
                tools:ignore="SelectableText" />

            <TextView
                android:id="@+id/bonusYellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="35dp"
                android:padding="4dp"
                android:layout_marginStart="4dp"
                android:gravity="center"
                tools:text="Y"
                android:textColor="#000000"
                android:background="#FFFF00"
                tools:ignore="SelectableText" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvCivilization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="A.S.T. rank order 00"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            tools:ignore="SelectableText" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="8000BC"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            tools:ignore="SelectableText" />

        <TextView
            android:id="@+id/tvVp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="VP: 000"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            tools:ignore="SelectableText" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline_main_split"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/tvCalamityBonus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/calamity_effects_overview"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/secondRowContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vertical_guideline_main_split" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listCalamity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tvCalamityBonus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vertical_guideline_main_split"
        tools:listitem="@layout/item_row_calamity"
        tools:itemCount="5" />

    <TextView
        android:id="@+id/tvSpecials"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/special_abilities_and_immunities"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/secondRowContainer"
        app:layout_constraintStart_toEndOf="@id/vertical_guideline_main_split"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listAbility"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tvSpecials"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/vertical_guideline_main_split"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_row_specials"
        tools:itemCount="5" />

</androidx.constraintlayout.widget.ConstraintLayout>